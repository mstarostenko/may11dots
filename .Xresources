Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30

! URxvt.transparent:          true
! URxvt.shading:              50

URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            5000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           false
/* URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */

! :antialias=true:hinting=true
! :antialias=true:hinting=true

URxvt*font:           xft:mononoki Nerd Font:regular:size=9
URxvt*boldFont:       xft:mononoki Nerd Font:bold:size=9
URxvt*italicFont:     xft:mononoki Nerd Font:italic:size=9
URxvt*boldItalicFont: xft:mononoki Nerd Font:italic:size=9

! URxvt*boldFont: xft:DejaVu sans Mono:bold:size=9:antialias=true:hinting=true

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false
URxvt*scrollTtyOutput:      false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          i3-sensible-browser


! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #ff2734
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! hard contrast: *background: #1d2021
! *background: #282828
*background: [80]#012723
! soft contrast: *background: #32302f
! *foreground: #ebdbb2
*foreground: #839496
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

! URxvt.perl-ext: default,url-select
URxvt.perl-ext: default
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

URxvt.colorUL: #0168bb

URXVT.colorIT: #87af5f
URXVT.colorBD: #d7d7d7
URXVT.colorUL: #87afd7
